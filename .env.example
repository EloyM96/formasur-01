# Base application configuration
ENVIRONMENT=development

# Database configuration
SQLSERVER_HOST=sqlserver
SQLSERVER_PORT=1433
SQLSERVER_DB=prl_notifier
SQLSERVER_SA_PASSWORD=Your_password123
DATABASE_URL=mssql+pyodbc://sa:${SQLSERVER_SA_PASSWORD}@${SQLSERVER_HOST}:${SQLSERVER_PORT}/${SQLSERVER_DB}?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# Redis / RQ configuration
REDIS_URL=redis://redis:6379/0
QUEUE_URL=redis://redis:6379/0

# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=change-me
SMTP_FROM_EMAIL=notifications@example.com
