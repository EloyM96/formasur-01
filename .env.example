# Base application configuration
ENVIRONMENT=development

# Database configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=prl_notifier
POSTGRES_USER=prl_notifier
POSTGRES_PASSWORD=prl_notifier
DATABASE_URL=postgresql+psycopg://prl_notifier:prl_notifier@postgres:5432/prl_notifier

# External SQL bridge (optional)
EXTERNAL_SQL_ENABLED=false
EXTERNAL_SQL_DATABASE_URL=
EXTERNAL_SQL_ECHO=false

# Redis / RQ configuration
REDIS_URL=redis://redis:6379/0
QUEUE_URL=redis://redis:6379/0

# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=change-me
SMTP_FROM_EMAIL=notifications@example.com
